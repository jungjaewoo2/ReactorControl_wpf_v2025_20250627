<UserControl x:Class="ProcessValue.ProcessValueBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessValue"
             mc:Ignorable="d" Width="72" Height="21" Unloaded="UserControl_Unloaded" >
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="72" Background="#FFEEEEEE">
            <TextBlock x:Name="ValueText" TextWrapping="Wrap" Text="0.00" FontFamily="Arial" FontSize="16" Width="69" TextAlignment="Right" Margin="0,0,0,-1" Height="20"/>
        </Border>

    </Grid>
</UserControl>
