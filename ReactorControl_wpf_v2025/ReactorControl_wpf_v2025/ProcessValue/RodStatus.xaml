<UserControl x:Class="ProcessValue.RodStatus"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProcessValue"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="70">
    <Grid Margin="0" Background="#FFF1F1F1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="10*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <local:PVColorTextBox Height="Auto" Width="Auto" Grid.ColumnSpan="2"/>
            <local:PVColorTextBox Height="Auto" Width="Auto" Grid.Row="1" Margin="0,-1,-1,0"/>
            <local:PVColorTextBox Height="Auto" Width="Auto" Grid.Column="1" Grid.Row="1" Margin="-1,-1,0,0"/>
        </Grid>
        <Grid Margin="0" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <local:PVColorTextBox Height="Auto" Width="Auto" Margin="0,0,0,0" Grid.ColumnSpan="2"/>
            <local:PVColorTextBox Height="Auto" Width="Auto" Margin="0,0,0,0" Grid.ColumnSpan="1" Grid.Row="1"/>
            <local:PVColorTextBox Height="Auto" Width="Auto" Margin="0,0,0,0" Grid.ColumnSpan="1" Grid.Row="1" Grid.Column="1"/>
        </Grid>




    </Grid>

</UserControl>
